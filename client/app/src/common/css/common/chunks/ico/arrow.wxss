.arrow-common,
.arrow-left,
.arrow-right,
.arrow-up,
.arrow-down {
  width: 1rem;
  height: 1rem;
  border-right: 2px solid #d5d5d5;
  border-top: 2px solid #d5d5d5;
  float: right;
  position: relative;
  top: .3rem;
}
.arrow-left {
  transform: rotate(-135 deg);
}
.arrow-right {
  transform: rotate(45 deg);
}
.arrow-up {
  transform: rotate(-45 deg);
  right: 1.0rem;
}
.arrow-down {
  transform: rotate(135 deg);
  right: 1.0rem;
}
.arrow-active {
  border-right: 2px solid #f79594;
  border-top: 2px solid #9bdbff;
}
.arrow-disabled {
  border-right: 2px solid #ccc;
  border-top: 2px solid #ccc;
}
